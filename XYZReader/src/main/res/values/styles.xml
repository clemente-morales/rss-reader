<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowExitTransition">@transition/list_exit</item>
        <item name="android:windowEnterTransition">@transition/list_exit</item>
        
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/primary_text</item>

        <item name="android:toolbarStyle">@style/toolbar</item>
    </style>

    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

</resources>
